# Simple HTTP request parser
func parse_request(request_data) {
    var lines = request_data.split("\n")
    if (len(lines) == 0) {
        return null
    }
    
    var first_line = lines[0].strip()
    var parts = first_line.split(" ")
    if (len(parts) < 2) {
        return null
    }
    
    return {
        "method": parts[0],
        "path": parts[1],
        "version": parts[2] if len(parts) > 2 else "HTTP/1.1"
    }
}

