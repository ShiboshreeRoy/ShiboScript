# Test 5: Functions
print("5Ô∏è‚É£  FUNCTIONS")
print("----------------------------------------")
func add(x, y) {
    return x + y
}

func multiply(x, y) {
    return x * y
}

func greet(name) {
    return "Hello, " + name + "!"
}

func factorial(n) {
    if (n <= 1) {
        return 1
    }
    return n * factorial(n - 1)
}

