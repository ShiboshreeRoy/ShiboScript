# Test 9: Object-Oriented Programming
print("9Ô∏è‚É£  OBJECT-ORIENTED PROGRAMMING")
print("----------------------------------------")
class Person {
    var name
    var age
    var occupation
    
    func init(name, age, occupation) {
        self.name = name
        self.age = age
        self.occupation = occupation
    }
    
    func introduce() {
        return "Hi, I'm " + self.name + ", " + self.age + " years old, working as a " + self.occupation
    }
    
    func have_birthday() {
        self.age = self.age + 1
        return self.name + " is now " + self.age + " years old!"
    }
}

class Student(Person) {
    var student_id
    var courses
    
    func init(name, age, student_id) {
        super.init(name, age, "Student")
        self.student_id = student_id
        self.courses = []
    }
    
    func add_course(course) {
        append(self.courses, course)
        return self.name + " enrolled in " + course
    }
    
    func introduce() {
        var base_intro = super.introduce()
        return base_intro + " with ID: " + self.student_id
    }
}

var person = Person("John Doe", 30, "Engineer")
print("Person introduction: " + person.introduce())
print("Birthday: " + person.have_birthday())

var student = Student("Alice Smith", 20, "STU001")
print("Student introduction: " + student.introduce())
print("Enrollment: " + student.add_course("Computer Science"))
print("Another enrollment: " + student.add_course("Mathematics"))
print("Student courses: " + json.encode(student.courses))

print("‚úÖ OOP working")
print("")

