# Simple HTTP response generator
func create_response(status_code, content, content_type) {
    var status_text = "OK"
    if (status_code == 404) {
        status_text = "Not Found"
    } else if (status_code == 500) {
        status_text = "Internal Server Error"
    }
    
    var response = "HTTP/1.1 " + status_code + " " + status_text + "\r\n"
    response = response + "Content-Type: " + content_type + "\r\n"
    response = response + "Content-Length: " + len(content) + "\r\n"
    response = response + "Connection: close\r\n"
    response = response + "\r\n"
    response = response + content
    
    return response
}

